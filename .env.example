# Ports: single source of truth (Docker Compose + local npm run dev in client/server)
CLIENT_PORT=3007
SERVER_PORT=3008

# Database (used by docker compose up -d; optional for local app dev)
# DB_HOST=localhost when running server locally; db when server runs in Docker
# DB_PASSWORD must match the Postgres server. If Docker was first run with another password, use that or recreate: docker compose down -v && docker compose up -d
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=webstore

# JWT (auth)
JWT_SECRET=your-long-random-secret-do-not-commit-production-value
JWT_EXPIRES_IN=1d

# API_URL is set by docker-compose for server-side fetches (container hostname).
# NEXT_PUBLIC_API_URL is for browser fetches (localhost).
